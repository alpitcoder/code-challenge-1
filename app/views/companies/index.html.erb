<div class="container py-5">
  <h3>Companies</h3>
  <%= link_to "+ Create a Company", new_company_path %><br>
  <% if @companies.empty? %>
  <p>No Companies Found</p>
  <% else %>
    <ul class="list-group my-5">
      <% @companies.each do |company| %>
        <div>
          <a href="<%= company_path(company) %>" class="list-group-item list-group-item-action">
            <%= company.name %>
          </a>
          <%= link_to 'Delete', company_path(company), method: :delete, data: { confirm: 'Are you sure ?' }, class: 'btn btn-sm btn-danger', id: 'delete_company' %>
        </div>
      <% end %>
    </ul>
  <% end %>
</div>
